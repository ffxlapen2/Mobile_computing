<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logo atau Gambar -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/tvAboutDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aplikasi ini berisi sejarah klub sepak bola dari berbagai belahan dunia. Anda dapat menemukan profil pemain, sejarah berdirinya klub, prestasi-prestasi penting, hingga perkembangan terbaru dari klub tersebut.\n\nDengan tampilan yang sederhana dan informatif, aplikasi ini cocok untuk semua pecinta sepak bola!"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Developer Info -->
        <TextView
            android:id="@+id/tvDeveloper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dikembangkan oleh:\nNama: [Nama Anda]\nUniversitas: [Nama Kampus]\nEmail: yourmail@example.com"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvAboutDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Versi Aplikasi -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versi Aplikasi: 1.0"
            android:textSize="14sp"
            android:textColor="#888888"
            app:layout_constraintTop_toBottomOf="@id/tvDeveloper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
