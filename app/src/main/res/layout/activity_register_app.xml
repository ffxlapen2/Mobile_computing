<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterApp">

    <!-- Judul -->
    <TextView
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Buat Akun Baru"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark" />

    <!-- Nama Depan -->
    <EditText
        android:id="@+id/etNamaDepan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/Register"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Nama Depan"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:padding="12dp" />

    <!-- Nama Belakang -->
    <EditText
        android:id="@+id/etNamaBelakang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/etNamaDepan"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Nama Belakang"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:padding="12dp" />

    <!-- Nomor HP -->
    <EditText
        android:id="@+id/NomorHP"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/etNamaBelakang"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Masukan Nomor Telepon"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:padding="12dp"
        android:inputType="phone" />

    <!-- Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/NomorHP"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Masukan Email"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:padding="12dp"
        android:inputType="textEmailAddress" />

    <!-- Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Masukan Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:padding="12dp"
        android:inputType="textPassword" />

    <!-- Konfirmasi Password -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Konfirmasi Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:padding="12dp"
        android:inputType="textPassword" />

    <!-- Tombol Register -->
    <Button
        android:id="@+id/btnLogin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="20sp" />

</RelativeLayout>
